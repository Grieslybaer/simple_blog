<p id="notice"><%= notice %></p>

<h2><%= @article.title %></h2>
<hr>
<p>
  <strong>Author:</strong>
  <%= @article.user.name %>
</p>

<p>
  <%= @article.content %>
</p>

<hr>

<% if @article.comments.present? %>
<h4>Comments</h4>
<%= render @article.comments %>
<% end %>

<%= render "simple_blog/comments/form" %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
